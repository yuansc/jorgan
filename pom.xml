						</goals>
						<configuration>
							<groupId>local-jorgan-lib</groupId>
							<artifactId>bias</artifactId>
							<version>0.5</version>
							<file>${basedir}/jorgan-core/lib/bias-0.5.jar</file>
							<packaging>jar</packaging>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
					<execution>
						<id>install-spin-1.5.jar</id>
