<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>jorgan</groupId>
	<artifactId>jorgan-mb</artifactId>
	<version>4.0.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>jOrgan MB</name>
	<description>
		jOrgan MB is the Maven Build of the highly-developed computer program 
		written by Sven Meier, designed to enable users to create or to play 
		Virtual Pipe Organs of high quality.
	</description>
	<organization>
		<name>Scott Ling-Hsiung Yuan</name>
		<url>https://github.com/yuansc/jorgan/tree/mb</url>
	</organization>

	<licenses>
		<license>
			<name>GNU Lesser General Public License</name>
			<url>http://www.gnu.org/copyleft/lesser.html</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<properties>
		<jorgan.version>${project.version}</jorgan.version>
		<maven.compiler.source>11</maven.compiler.source>
		<maven.compiler.target>11</maven.compiler.target>
		<native.builddir>${project.build.directory}/native</native.builddir>
		<jni.cc>cl</jni.cc>
		<jni.packaging>dll</jni.packaging>
		<jni.include>/usr/lib/jvm/default-java/include</jni.include>
		<jni.include.platform>${jni.include}/platform</jni.include.platform>
	</properties>

	<dependencies>
		<dependency>
			<groupId>net.sf.kxml</groupId>
			<artifactId>kxml2-min</artifactId>
			<version>2.3.0</version>
		</dependency>
		<dependency>
			<groupId>com.thoughtworks.xstream</groupId>
			<artifactId>xstream</artifactId>
			<version>1.4.15</version>
		</dependency>
		<dependency>
			<groupId>local-jorgan-lib</groupId>
			<artifactId>bias</artifactId>
			<version>0.5</version>
		</dependency>
		<dependency>
			<groupId>local-jorgan-lib</groupId>
			<artifactId>spin</artifactId>
			<version>1.5</version>
		</dependency>
		<dependency>
			<groupId>local-jorgan-lib</groupId>
			<artifactId>swingx</artifactId>
			<version>0.7</version>
		</dependency>
		<dependency>
			<groupId>local-jorgan-lib</groupId>
			<artifactId>gj-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>local-jorgan-lib</groupId>
			<artifactId>gj-layouts</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>local-jorgan-lib</groupId>
			<artifactId>gj-ui</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<build>
