	<profiles>
		<profile>
			<id>linux-ubuntu</id>
			<activation>
				<os>
					<name>linux</name>
				</os>
				<property>
					<name>java.vendor</name>
					<value>Ubuntu</value>
				</property>
			</activation>
			<properties>
				<jni.cc>gcc</jni.cc>
				<jni.packaging>so</jni.packaging>
				<jni.include>/usr/lib/jvm/default-java/include</jni.include>
				<jni.include.platform>${jni.include}/linux</jni.include.platform>
			</properties>
		</profile>
	</profiles>
</project>